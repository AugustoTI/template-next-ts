{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "printWidth": 90,
  "proseWrap": "always",
  "quoteProps": "as-needed",
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "endOfLine": "lf",
  "plugins": ["@ianvs/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "tailwindFunctions": ["cn", "cva"],
  "tailwindStylesheet": "./src/app/global.css",
  "importOrder": [
    "^(react/(.*)$)|^(react$)",
    "^(next/(.*)$)|^(next$)",
    "",
    "^types$",
    "^~/types/(.*)$",
    "^~/configs/(.*)$",
    "^~/lib/(.*)$",
    "^~/utils/(.*)$",
    "^~/actions/(.*)$",
    "^~/hooks/(.*)$",
    "^~/components/ui/(.*)$",
    "^~/components/(.*)$",
    "^~/assets/(.*)$",
    "^~/app/(.*)$",
    "",
    "^#/app/(.*)$",
    "",
    "^[./]"
  ],
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"]
}
